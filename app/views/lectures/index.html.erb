<p id="notice"><%= notice %></p>

<h1>Lectures</h1>

<%= link_to 'New Lecture', new_lecture_path ,:class=>'btn btn-success' , :style =>'font-size:15px' %>

<table class="table table-striped ">
  <thead class="thead-dark">
    <tr>
      <th>Content</th>
      <th>Attachment</th>
      <th>Course Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lectures.each do |lecture| %>
      <tr>
        <td><%=link_to (raw lecture.content),lecture %></td>
        <td><%= lecture.attachment %></td>
         <td><%= lecture.course.title %></td> 
        <td><%= link_to 'Show', lecture ,:class=>'btn btn-primary' %></td>
        <%if user_session && current_user.id === lecture.user_id%>
        <td><%= link_to 'Edit', edit_lecture_path(lecture),:class=>'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', lecture, method: :delete, data: { confirm: 'Are you sure?' },:class=>'btn btn-danger' %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


