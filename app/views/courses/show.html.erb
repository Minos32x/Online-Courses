<p id="notice"><%= notice %></p>

<div>
  <strong>Title:</strong>
  <%= @course.title %>
   <%if user_session && current_user.id === @course.user_id%>
<%= link_to 'Edit Course', edit_course_path(@course) %> 
<%end%>

</div>

<br>
<%= link_to 'Add New Lecture' , new_lecture_path %>

<div>
<table>
  <thead>
    <tr>
      <th><strong>Lectures:</strong></th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
<% @course.lectures.each do |lecture| %>
  <tr> <td><%= link_to lecture.content , lecture %> </td>  

 <%if user_session && current_user.id === lecture.user_id%>
 <td><%= link_to 'Edit Lecture', edit_lecture_path(lecture) %></td>
       <td> <%= link_to 'Delete Lecture', lecture, method: :delete, data: { confirm: 'Are you sure?' } %>
       <%end%></td>
        </tr> 

<% end %>
  </tbody>
  </table>

</div>

