<p id="notice"><%= notice %></p>

<div class="text-center ">
  <strong style="font-size:30px">Title: <%= @course.title %> </strong>
  
   <%if user_session && current_user.id === @course.user_id%>
<%= link_to 'Edit Course', edit_course_path(@course), :style=>'font-size:20px' %> 
<%end%>

</div>

<br>
<%= link_to 'New Lecture' , new_lecture_path , :class =>'btn btn-success' , :style=>'font-size:15px'%>

<div>
<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th><strong>Lectures:</strong></th>
      <th colspan="2">Action</th>
    </tr>
  </thead>
  <tbody>
<% @course.lectures.each do |lecture| %>
  <tr> <td><%=link_to (raw lecture.content) , lecture , :style=>'font-size:15px'%> </td>  

 <%if user_session && current_user.id === lecture.user_id%>
 <td><%= link_to 'Edit Lecture', edit_lecture_path(lecture) , :class =>'btn btn-warning'%></td>
       <td> <%= link_to 'Delete Lecture', lecture, method: :delete, data: { confirm: 'Are you sure?' } , :class =>'btn btn-danger'%>
       <%end%></td>
        </tr> 

<% end %>
  </tbody>
  </table>

</div>

<br>
<br>
 
<%= link_to 'Courses List', courses_path, :class =>'btn btn-primary' , :style=>'font-size:15px' %>
