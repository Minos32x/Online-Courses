<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

<div class="field">
    <%= f.label :name ,:style=>'font-size:20px'%><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" ,:class=>'form-control',:style=>'font-size:15px'%>
  </div>

  <div class="field">
    <%= f.label :email ,:style=>'font-size:20px'%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:class=>'form-control',:style=>'font-size:15px'%>
  </div>
  


   <div class="field">
    <%= f.label :date_of_birth,:style=>'font-size:20px' %><br />
    <%= f.date_field :date_of_birth, autofocus: true, autocomplete: "date_of_birth" ,:class=>'form-control',:style=>'font-size:15px'%>
  </div>


  <div class="field">
    <%= f.label :gender,:style=>'font-size:20px' %><br />
    <%= f.select :gender,User.genders.keys %>
  </div>


  <div class="field">
    <%= f.label :avatar,:style=>'font-size:20px' %><br />
    <%= image_tag(@user.avatar.thumb.to_s) %>
    <%= f.file_field :avatar%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password,:style=>'font-size:20px' %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" ,:class=>'form-control',:style=>'font-size:15px'%>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,:style=>'font-size:20px' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",:class=>'form-control',:style=>'font-size:15px' %>
  </div>

  <div class="field">
    <%= f.label :current_password,:style=>'font-size:20px' %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" ,:class=>'form-control',:style=>'font-size:15px'%>
  </div>

  <div class="actions">
    <%= f.submit "Update",:class=>'btn btn-success',:style=>'font-size:15px' %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p><strong style="font-size:15px"> Unhappy? </strong> <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,:style=>'font-size:15px' ,:class=>'btn btn-danger' %></p>

<%= link_to "Back", :back  ,:class=>'btn btn-warning',:style=>'font-size:15px'%>
