<h2 style="font-size:25px;">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email ,:style=>'font-size:25px'%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:class =>'form-control',:style=>'width:200px',:placeholder=>'email ' %>
  </div>

  <div class="field">
    <%= f.label :password,:style=>'font-size:25px' %><br />
    <%= f.password_field :password, autocomplete: "off" ,:class =>'form-control',:style=>'width:200px',:placeholder=>'password' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me ,:class=>'form-check-label'%>
      <%= f.label :remember_me ,:style=>'font-size:25px'%>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" ,:style=>'font-size:15px',:class=>'btn btn-success' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
